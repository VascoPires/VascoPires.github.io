	language = {en},
	urldate = {2024-10-26},
	journal = {Acta Astronautica},
	author = {Albers, Roland and Andrews, Henrik and Boccacci, Gabriele and Pires, Vasco D.C. and Laddha, Sunny and Lundén, Ville and Maraqten, Nadim and Matias, João and Krämer, Eva and Schulz, Leonard and Palanca, Ines Terraza and Teubenbacher, Daniel and Baskevitch, Claire and Covella, Francesca and Cressa, Luca and Moreno, Juan Garrido and Gillmayr, Jana and Hollowood, Joshua and Huber, Kilian and Kutnohorsky, Viktoria and Lennerstrand, Sofia and Malatinszky, Adel and Manzini, Davide and Maurer, Manuel and Nidelea, Daiana Maria Alessandra and Rigon, Luca and Sinjan, Jonas and Suarez, Crisel and Viviano, Mirko and Knutsen, Elise Wright},
