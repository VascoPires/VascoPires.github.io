  collaborator = {Belinha, Jorge and Campos, Jos{\'e} Carlos Reis and Fonseca, Elza and Figueiral Silva, Maria Helena and Marques, Maria Arcelina and Gentil Costa, Maria Fernanda and Oliveira, Susana},
  isbn = {978-1-00-321715-2},
